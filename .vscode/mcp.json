{
    "servers": {
        "context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
			"env": {
				"MEMORY_FILE_PATH": "${workspaceFolder}/.github/memory.json"
			}
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "playwright": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			]
		},
        "todo-md": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@danjdewhurst/todo-md-mcp"
            ],
            "env": {
                "TODO_FILE_PATH": "${workspaceFolder}/.github/.todo.md"
            }
        },
        "microsoft.docs": {
            "type": "http",
            "url": "https://learn.microsoft.com/api/mcp"
        },
        "mermaid-validator": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@rtuin/mcp-mermaid-validator@latest"
            ]
        }
    }
}
